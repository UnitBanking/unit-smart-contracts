{
  "name": "@unitbanking/unit-smart-contracts",
  "description": "Core smart contracts of Unit",
  "license": "MIT",
  "version": "0.1.0",
  "scripts": {
    "build:foundry": "forge build",
    "test:foundry": "forge test",
    "build:hardhat": "hardhat compile",
    "test:hardhat": "hardhat test",
    "clean:hardhat": "hardhat clean && rimraf ./hardhat/build",
    "deploy": "hardhat run hardhat/scripts/deploy.ts",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:fix": "yarn lint:sol:fix && yarn lint:ts:fix",
    "lint:sol": "yarn prettier './{foundry,contracts}/!(lib)/*.sol' --check",
    "lint:sol:fix": "yarn prettier './{foundry,contracts}/!(lib)/*.sol' --write",
    "lint:ts": "yarn prettier './{hardhat,foundry}/{test,scripts}/**/*.{js,ts}' --check && yarn eslint './{hardhat,foundry}/{test,scripts}/**/*.{js,ts}'",
    "lint:ts:fix": "yarn prettier './{hardhat,foundry}/{test,scripts}/**/*.{js,ts}' --write && yarn eslint './{hardhat,foundry}/{test,scripts}/**/*.{js,ts}' --fix"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0 ",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^6.8.0",
    "hardhat": "^2.18.3",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@prb/math": "^4.0.1"
  }
}
